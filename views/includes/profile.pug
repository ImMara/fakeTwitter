div(class="profile-container d-flex flex-column mr-3 bg-white")
    div(class="d-flex flex-row justify-content-center align-items-center mt-3")
        img(src="/images/default-profile.webp" class="img-fluid rounded-circle")
    div(class="d-flex flex-row justify-content-center align-items-center my-3")
        p= `${currentUser.username} (${ currentUser.local.email })`
    div(class="d-flex flex-row justify-content-center align-items-center my-3 text-center")
        div(class="flex-fill")
            p
            strong Tweet
            br
            span(class="text-primary")= tweets && tweets.length
        div(class="flex-fill")
            p
            strong Following
            br
            span(class="text-primary") -