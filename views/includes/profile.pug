script(src="/javascripts/profile.js")
div(class="profile-container d-flex flex-column mr-3 bg-white")
    form(id="form-container" class="d-flex flex-row justify-content-center align-items-center mt-3" action="/users/update/image" method="post" enctype="multipart/form-data")
        input(id="input-avatar" type="file" name='avatar' class="d-none")
        img(id="image-profile" src="/images/default-profile.webp" class="img-fluid rounded-circle")
    div(class="d-flex flex-row justify-content-center align-items-center my-3")
        p= `${currentUser.username} (${ currentUser.local.email })`
    div(class="d-flex flex-row justify-content-center align-items-center my-3 text-center")
        div(class="flex-fill")
            p
            strong Tweet
            br
            span(class="text-primary")= tweets && tweets.length ? tweets.length : "-"
        div(class="flex-fill")
            p
            strong Following
            br
            span(class="text-primary") -